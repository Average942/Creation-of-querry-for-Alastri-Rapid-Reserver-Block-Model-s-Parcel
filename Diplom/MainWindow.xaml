            <TextBox x:Name="oreValue1M2" HorizontalAlignment="Left" Margin="136,32,0,0" TextWrapping="Wrap" Text="hg" VerticalAlignment="Top" Width="66"/>
            <Label Content="&gt;hg" HorizontalAlignment="Left" Margin="136,63,0,0" VerticalAlignment="Top" Height="28" Width="50"/>
            <TextBox x:Name="oreResult1M2" HorizontalAlignment="Left" Margin="136,95,0,0" TextWrapping="Wrap" Text="hg" VerticalAlignment="Top" Width="50"/>
            <Label Content="Value mg" HorizontalAlignment="Left" Margin="210,0,0,0" VerticalAlignment="Top" Height="27" Width="66"/>
            <TextBox x:Name="oreValue2M2" HorizontalAlignment="Left" Margin="210,32,0,0" TextWrapping="Wrap" Text="mg" VerticalAlignment="Top" Width="66"/>
