            <TextBox x:Name="oreResult2M2" HorizontalAlignment="Left" Margin="210,95,0,0" TextWrapping="Wrap" Text="mg" VerticalAlignment="Top" Width="50"/>
            <Label Content="Value lg1" HorizontalAlignment="Left" Margin="282,0,0,0" VerticalAlignment="Top" Height="27" Width="66"/>
