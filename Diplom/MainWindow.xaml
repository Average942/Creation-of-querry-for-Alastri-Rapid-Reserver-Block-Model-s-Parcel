            <TextBox x:Name="oreResult3M3" HorizontalAlignment="Left" Margin="421,162,0,0" TextWrapping="Wrap" Text="lg" VerticalAlignment="Top" Width="50" />
            <Label Content="Value minv" HorizontalAlignment="Left" Margin="492,-1,0,0" VerticalAlignment="Top" Height="27" Width="70"/>
            <TextBox x:Name="oreValue4M3" HorizontalAlignment="Left" Margin="492,31,0,0" TextWrapping="Wrap" Text="minv" VerticalAlignment="Top" Width="66"/>
            <Label Content="&gt;minv" HorizontalAlignment="Left" Margin="492,130,0,0" VerticalAlignment="Top" Height="28" Width="50"/>
            <TextBox x:Name="oreResult4M3" HorizontalAlignment="Left" Margin="492,162,0,0" TextWrapping="Wrap" Text="minw" VerticalAlignment="Top" Width="50"/>
            <Label Content="other" HorizontalAlignment="Left" Margin="567,62,0,0" VerticalAlignment="Top" Height="28" Width="50"/>
            <TextBox x:Name="oreResult5M3" HorizontalAlignment="Left" Margin="567,94,0,0" TextWrapping="Wrap" Text="w" VerticalAlignment="Top" Width="50"/>
            <TextBox x:Name="oreMainNameM3" HorizontalAlignment="Left" Margin="107,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="58" Text="MOName"></TextBox>
