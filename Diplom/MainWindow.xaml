            <Label Content="&lt;=AO2 &amp; &lt;=AO1" HorizontalAlignment="Left" Margin="27,137,0,0" VerticalAlignment="Top" Height="24" Width="77" FontSize="8" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-1.102"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.481"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <TextBox x:Name="oreAddResult1M3" HorizontalAlignment="Left" Margin="40,166,0,0" TextWrapping="Wrap" Text="hg" VerticalAlignment="Top" Width="50" FontSize="8"/>
