            <Label Content="&gt;lg1" HorizontalAlignment="Left" Margin="282,63,0,0" VerticalAlignment="Top" Height="28" Width="50"/>
            <TextBox x:Name="oreResult3M2" HorizontalAlignment="Left" Margin="282,95,0,0" TextWrapping="Wrap" Text="lg1" VerticalAlignment="Top" Width="50" />
            <Label Content="Value lg2" HorizontalAlignment="Left" Margin="352,0,0,0" VerticalAlignment="Top" Height="27" Width="66"/>
            <TextBox x:Name="oreValue4M2" HorizontalAlignment="Left" Margin="352,32,0,0" TextWrapping="Wrap" Text="lg2" VerticalAlignment="Top" Width="66"/>
            <Label Content="&gt;lg2" HorizontalAlignment="Left" Margin="352,63,0,0" VerticalAlignment="Top" Height="28" Width="50"/>
            <TextBox x:Name="oreResult4M2" HorizontalAlignment="Left" Margin="352,95,0,0" TextWrapping="Wrap" Text="lg2" VerticalAlignment="Top" Width="50"/>
            <Label Content="Value minv" HorizontalAlignment="Left" Margin="424,0,0,0" VerticalAlignment="Top" Height="27" Width="70"/>
            <TextBox x:Name="oreValue5M2" HorizontalAlignment="Left" Margin="424,32,0,0" TextWrapping="Wrap" Text="minv" VerticalAlignment="Top" Width="66"/>
            <Label Content="&gt;minv" HorizontalAlignment="Left" Margin="424,63,0,0" VerticalAlignment="Top" Height="28" Width="50"/>
            <TextBox x:Name="oreResult5M2" HorizontalAlignment="Left" Margin="424,95,0,0" TextWrapping="Wrap" Text="minw" VerticalAlignment="Top" Width="50"/>
            <Label Content="other" HorizontalAlignment="Left" Margin="500,63,0,0" VerticalAlignment="Top" Height="28" Width="50"/>
            <TextBox x:Name="oreResult6M2" HorizontalAlignment="Left" Margin="500,95,0,0" TextWrapping="Wrap" Text="w" VerticalAlignment="Top" Width="50"/>

        </Grid>
        <Grid x:Name="thirdMethod"  Visibility="Collapsed" HorizontalAlignment="Left" Height="236" VerticalAlignment="Top" Width="566" Margin="18,22,0,0">
            <Label Content="Main Ore Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102"/>
            <Label Content="Add Ore 1 Name" HorizontalAlignment="Left" Margin="1,25,0,0" VerticalAlignment="Top" Width="70" FontSize="8" Height="21"/>
            <Label Content="Add Ore 2 Name" HorizontalAlignment="Left" Margin="0,51,0,0" VerticalAlignment="Top" Width="70" FontSize="8" Height="21"/>
            <Label Content="AO1 Value" HorizontalAlignment="Left" Margin="175,69,0,0" VerticalAlignment="Top" Width="66" FontSize="8" Height="20"/>
            <Label Content="AO2 Value" HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top" Width="66" FontSize="8" Height="20"/>
            <Label Content="Value hg" HorizontalAlignment="Left" Margin="208,0,0,0" VerticalAlignment="Top" Height="27" Width="66"/>
            <TextBox x:Name="oreValue1M3" HorizontalAlignment="Left" Margin="208,32,0,0" TextWrapping="Wrap" Text="hg" VerticalAlignment="Top" Width="66"/>
            <Label Content="Value bg" HorizontalAlignment="Left" Margin="349,-1,0,0" VerticalAlignment="Top" Height="27" Width="66"/>
